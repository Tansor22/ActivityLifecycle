<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_centerHorizontal="true"
                android:theme="@style/Theme.AppCompat.Dialog"
                tools:context=".SecondaryActivity">
    <LinearLayout android:id="@+id/centerRoot"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:orientation="vertical" tools:ignore="UselessParent">
        <Button
                android:layout_marginTop="20dp"
                android:text="@string/return_to_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/goToMainButton"/>
    </LinearLayout>

</RelativeLayout>